{% extends 'base.html.twig' %}

{% block body %}
        <h1>Recherche</h1>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}

        <h1>Products list</h1>

        <table>
            <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Photo</th>
                <th>Title</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Charisme</th>
                <th>Intelligence</th>
                <th>Beaute</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td><img src="{{ product.avatar }}"></td>
                    {#<td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>#}
                    <td>{{ product.title }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.prix }}</td>
                    <td>{{ product.charisme }}</td>
                    <td>{{ product.intelligence }}</td>
                    <td>{{ product.beaute }}</td>

                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('product_show', { 'id': product.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('product_edit', { 'id': product.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('product_new') }}">Create a new product</a>
            </li>
        </ul>
    {% endblock %}
